  body { font-family: Arial; margin: 20px; }
  #toolbar button { margin-right: 5px; }
  #toolbar input { margin-right: 10px; }
  #editor-container { display:none; margin-top:20px; }
  #photo-preview div { position:relative; display:inline-block; margin:10px; }
  .delete-button { background:red; color:white; border:none; padding:5px; cursor:pointer; }
  .edit-button { background:blue; color:white; border:none; padding:5px; cursor:pointer; margin-top:5px; display:block; }
</style>
